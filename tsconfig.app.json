{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "baseUrl": "src",
    "types": [],
    "paths": {
      "@core/*": ["app/core/*"],
      "@service/*": ["app/core/service/*"],
      "@model/*": ["app/core/model/*"],
      "@config/*": ["app/config/*"],
      "@pages/*": ["app/pages/*"],
      "@shared/*": ["app/shared/*"],
      "@env/*": ["environments/*"],
      "@layout/*": ["app/layout/*"],
      "@control/*": ["app/control/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}

